<!-- Конфиг для кастомизации Loadscreen интерфейса 16:9 Для включения тэгов 
"loading_progress_percent" и "loading_stage" необходимо ввести консольную команду rs_loadingstages 1 -->
<w>
	<background width="1024" height="768">											<!-- Фон экрана загрузки-->
		<auto_static x="102" y="0" width="819" height="768" stretch="1">
			<texture>ui_mm_loading_screen</texture>
		</auto_static>
		<auto_static x="0" y="0" width="104" height="768" stretch="1">
			<texture>ui_mm_loading_left_widepanel</texture>
		</auto_static>
		<auto_static x="920" y="0" width="104" height="768" stretch="1">
			<texture>ui_mm_loading_right_widepanel</texture>
		</auto_static>
		<auto_static x="610" y="120">
			<text color="gray" font="electron18">X-Ray Oxygen x64 v1.7f</text>
		</auto_static>
	</background>

	<loading_logo x="104" y="173" width="816" height="512" stretch="1"/>			<!-- Картинка загружаемого уровня-->

	<loading_progress_background x="310" y="599" width="405" height="4">			<!-- Фон под прогресс бар загрузки-->
		<texture color="black" a="255">ui_mm_loading_progress_bar</texture>
	</loading_progress_background>

	<loading_progress x="310" y="599" width="405" height="4" horz="1" min="0" max="100" pos="0" inertion="5.0">
		<progress>
			<texture>ui_mm_loading_progress_bar</texture>							<!-- Прогресс бар загрузки-->
		</progress>
		<min_color color="white"/>
		<middle_color color="blue"/>
		<max_color color="white"/>
	</loading_progress>

	<loading_progress_percent x="500" y="574">										<!-- Проценты загрузки числами-->
		<text color="gray" font="electron18"/>
	</loading_progress_percent>

	<loading_stage x="310" y="530" width="405" height="20">							<!-- Стадия загрузки текстом-->
		<text align="c" color="white" font="letterica18"/>
	</loading_stage>

	<loading_header x="310" y="622" width="405" height="20">						<!-- Рубрика 100 советов в Зоне-->
		<text align="c" color="gray" font="letterica18"/>
	</loading_header>

	<loading_tip_number x="310" y="658" width="405" height="20">					<!-- Номер Совета-->
		<text align="c" color="gray" font="letterica18"/>
	</loading_tip_number>

	<loading_tip x="273" y="676" width="480" height="80" complex_mode="1">
		<text alignment="c" align="c" color="gray" font="letterica18"/>				<!-- Текст совета-->
	</loading_tip>
</w>